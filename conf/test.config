/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/preprocessing -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus                   = 6
    max_memory                 = '12.GB'
    max_time                   = '6.h'
    
    process.container = '/rwthfs/rz/SW/UTIL.common/singularity/nextflow'
    singularity.enabled = true

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    input                      = 'https://git.rwth-aachen.de/vleanu.alexandra/test-files/-/raw/main/samplesheet_test.csv'
    index                      = '/hpcwork/xy880829/indices/MMU/index.idx'
    t2g                        = '/hpcwork/xy880829/indices/MMU/t2g.txt'
    t1c                        = '/hpcwork/xy880829/indices/MMU/cdna_t2c.txt'
    t2c                        = '/hpcwork/xy880829/indices/MMU/intron_t2c.txt'
    workflow_mode              = 'lamanno'
    technology                 = '10XV2'

    // Genome references
    // genome = 'R64-1-1'
}
